function [t, y] = metodo_euler(f, tspan, y0, h)
    % f: función anónima @(t,y)
    % tspan: vector [t_inicial, t_final]
    % y0: condiciones iniciales (vector columna si es sistema)
    % h: tamaño de paso
    
    t = tspan(1):h:tspan(2);
    N = length(t);
    
    % Inicializar matriz de soluciones
    % El tamaño es (número de variables) x (pasos de tiempo)
    m = length(y0);
    y = zeros(m, N);
    
    y(:, 1) = y0;
    
    for i = 1:N-1
        y(:, i+1) = y(:, i) + h * f(t(i), y(:, i));
    end
    
    % Transponer para que el tiempo quede en la primera columna al graficar
    y = y'; 
end
